<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_marginLeft="0dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="2dp"
              android:paddingBottom="2dp">
    <!--android:layout_marginLeft="0dp"-->

    <TextView
            android:id="@+id/speciality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big"
            />

    <!-- Count of places -->
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placesQuantity"
        android:textSize="18sp" />-->
    <!-- Count of places -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
       
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Бюджет/Лицензия: "
                    android:textSize="@dimen/normal"
                    />

            <TextView
       
                    android:id="@+id/budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/normal"/>

            <TextView
       
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="/"
                    android:textSize="@dimen/normal"/>

            <TextView
       
                    android:id="@+id/license"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/normal"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Rating -->
    <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/studentsRating"
            android:textSize="18sp"/> -->
    <!-- Rating -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/common_rating"
                android:textSize="@dimen/normal"
                />

        <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/normal"
   />

        <TextView
                android:id="@+id/dxplace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/small"
   />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/original_rating"
                android:textSize="@dimen/normal"
                />

        <TextView
                android:id="@+id/originplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal"
   />

        <TextView
                android:id="@+id/dxoriginplace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/small"
   />
    </LinearLayout>

</LinearLayout>